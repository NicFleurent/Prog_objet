package pkTab2DSup;

import javax.swing.*;

public class Tab2DSupNo2 
{

	public static void main(String[] args) 
	{
		final	int		ETU				= 5;																			//Nombre maximal d'étudiant
		final	int		QUESTION		= 15;																			//nombre maximal de question
		final	int		VAL_A			= 1;																			//Valeur de a
		final	int		VAL_B			= 3;																			//Valeur de b
		final	int		VAL_C			= 4;																			//Valeur de c
		final	int		VAL_D			= 0;																			//Valeur de d
		final	int		VAL_E			= 2;																			//Valeur de e
		final	int		CAT_1			= 15;																			//1ere catégorie
		final	int		CAT_2			= 30;																			//2e catégorie
		final	int		CAT_3			= 45;																			//3e catégorie
		
				String	strQuestion;																					//Input pour chaque question
				
				char	cQuestion[][]	= new char[ETU][QUESTION];														//Questionnaire
				
				int		iEtu;																							//Étudiant érépondant au questionnaire
				int		iQuestion;																						//Question à laquelle il répond
				int		iCat;																							//Catégorie de l'étudiant
				int		iContinue;																						//Pour continuer la saisie
				int		iCtrA = 0, iCtrB = 0, iCtrC = 0, iCtrD = 0, iCtrE = 0;								//Compteur de choix de réponse
				
		for (iEtu = 0 ; iEtu < ETU ; iEtu++)
		{
			iCat = 0;
			
			for (iQuestion = 0 ; iQuestion < QUESTION ; iQuestion++)
			{
				do {
					strQuestion = JOptionPane.showInputDialog("Répondre par a, b, c, d ou e à la question " + (iQuestion + 1));
					cQuestion[iEtu][iQuestion]	= strQuestion.charAt(0);
					
					switch (cQuestion[iEtu][iQuestion])
					{
					case 'A': case 'a':
										iCat += VAL_A;
										iCtrA++;
										break;
					case 'B': case 'b':
										iCat += VAL_B;
										iCtrB++;
										break;
					case 'C': case 'c':
										iCat += VAL_C;
										iCtrC++;
										break;
					case 'D': case 'd':
										iCat += VAL_D;
										iCtrD++;
										break;
					case 'E': case 'e':
										iCat += VAL_E;
										iCtrE++;
										break;
					default: 			
										cQuestion[iEtu][iQuestion] = 'z';
										JOptionPane.showMessageDialog(null, "Saisie incorrecte, s.v.p. saisir une lettre parmi a, b, c, d ou e");
					}
					
				} while (cQuestion[iEtu][iQuestion] == 'z');
			}
			
			if (iCat <= CAT_1)
				JOptionPane.showMessageDialog(null, "L'étudiant " + (iEtu + 1) + " est une personne très dynamique.");
			else if (iCat <= CAT_2)
				JOptionPane.showMessageDialog(null, "L'étudiant " + (iEtu + 1) + " est une personne ayant beaucoup d'initiative.");
			else if (iCat <= CAT_3)
				JOptionPane.showMessageDialog(null, "L'étudiant " + (iEtu + 1) + " est une personne aimant le travail d'équipe.");
			else
				JOptionPane.showMessageDialog(null, "L'étudiant " + (iEtu + 1) + " est une personne ordonnée.");
			
			iContinue = JOptionPane.showConfirmDialog  (null, 
														"Désirez-vous faire le sondage avec un autre étudiant? ",  
														"Sondage psychologique", 
														JOptionPane.YES_NO_OPTION);
			
			if (iContinue == 1)
				break;

		}

	}

}
